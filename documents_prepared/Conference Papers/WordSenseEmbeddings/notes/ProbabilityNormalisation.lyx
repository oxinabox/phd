\begin_layout Standard
for 
\begin_inset Formula $\mathbf{c}=(w_{1},...w_{n})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{c}(\mathbf{c}|s)=\sum_{\forall w_{i}\in\mathbf{c}}L(w_{i}|s)=ln(\prod_{\forall w_{i}\in\mathbf{c}}P(w_{i}|s))$
\end_inset


\end_layout

\begin_layout Standard
ExpNormalising:
\end_layout

\begin_layout Standard
For a vector of negive real numbers 
\begin_inset Formula $\mathbf{l}=(l_{1},..,l_{m})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathbf{n}(\mathbf{l})=\left(\frac{e^{l_{i}-max(\mathbf{l)}}}{\sum_{l_{j}\in\mathbf{l}}e^{l_{j}-max(\mathbf{l)}}}=\frac{e^{l_{i}}}{\sum_{l_{j}\in\mathbf{l}}e^{l_{i}}}\right)_{l_{i}\in\mathbf{l}}
\]

\end_inset


\end_layout

\begin_layout Standard
for 
\begin_inset Formula $\mathbf{s}\mathbf{=}(s_{1},...,s_{m})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{c}(\mathbf{c}|\mathbf{s})=(L_{c}(\mathbf{c}|s_{i})\mid s_{i}\in\mathbf{s})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\mathbf{n}\circ L_{c}(\mathbf{c}|\mathbf{s})=\left(\dfrac{e^{ln(\prod_{\forall w_{i}\in\mathbf{c}}P(w_{i}|s_{i}))}}{\sum_{s_{j}\in\mathbf{s}}e^{ln(\prod_{\forall w_{i}\in\mathbf{c}}P(w_{i}|s_{j}))}}\right)_{s_{i}\in\mathbf{s}}$
\end_inset


\end_layout

\begin_layout Standard
i.e.
 
\begin_inset Formula $\mathbf{n}\circ L_{c}(\mathbf{c}|\mathbf{s})=\left(\dfrac{\prod_{\forall w_{i}\in\mathbf{c}}P(w_{i}|s_{i})}{\sum_{s_{j}\in\mathbf{s}}\prod_{\forall w_{i}\in\mathbf{c}}P(w_{i}|s_{j})}\right)_{s_{i}\in\mathbf{s}}$
\end_inset


\end_layout

